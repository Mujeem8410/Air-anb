<% layout("/layouts/boilerplate") %>
    <div class="row mt-3 show-card">
        <div class="col-8 offset-3">
            <h2>
                <%=indvdetails.title%>
                    </h3>
        </div>


        <div class="card col-6 offset-3 mt-2 listing-card">
            <img src="<%=indvdetails.image.url%>" class="card-img-top show-img" alt="Listing image.">
            <div class="card-body">
                <p class="card-text"><i>Owned by
                        <%=indvdetails.owner.username%></i></p>


                <p class="card-text">
                    <%=indvdetails.description%>
                </p>
                <p class="card-text"> &#8377;<%=indvdetails.price.toLocaleString("en-IN")%>


                        <p class="card-text">
                            <%=indvdetails.Location%>
                        </p>
                        <p class="card-text">
                            <%=indvdetails.Country%>
                        </p>

            </div>

        </div>

        <% if(curruser && indvdetails.owner._id.equals(curruser._id)){%>
            <div class="btns mb-5">
                <a href="/listing/<%=indvdetails._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

                <form method="post" action="/listing/<%=indvdetails._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-4">Deleting </button>
                </form>
            </div>
            <%}%>
                <% if(curruser){%>
                    <div>
                        
                        <form action="/listing/<%=indvdetails.id%>/reviews" method="POST" class="needs-validation"
                            novalidate>
                            
                            <div class="col-8 offset-3 mb-3 mt-3">
                                <hr>
                                <h4>Leave a Review</h4>
                                <label for="rating" class="form-label ">Rating</label>
                            <fieldset class=" starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                                    aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>

                            <div class="col-8 offset-3 mb-3 mt-3">
                               
                                <label for="comment" class="form-label">Comment</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="5"
                                    class="form-control mb-3" required></textarea>
                                <div class="invalid-feedback mb-3"> Please Enter Some comment for Review</div>
                                <button class="btn btn-outline-dark">Submit</button>
                            </div>

                            <%}%>
                        </form>
                        <div class="col-8 offset-3 mb-3 mt-3">
                            <hr />
                            <p><b>All Review</b></p>
                            <div class="row ">
                                <% for(review of indvdetails.reviews){%>
                                    <div class="card col-5 ms-3 mb-3">
                                        <div class="card-body">

                                            <h5 class="card-title">@<%=review.author.username%>
                                            </h5>
                                            <p class="starability-result card-text" data-rating="<%=review.rating%>">
                                            </p>
                                            <p class=" card-text">
                                                <%= review.comment%>
                                            </p>
                                            




                                        </div>
                                        <form class="mb-3"
                                            action="/listing/<%=indvdetails.id%>/reviews/<%=review.id%>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-dark mb-3 mt-3">
                                                Delete

                                            </button>
                                        </form>
                                    </div>

                                    <%}%>
                            </div>


                        </div>
                    </div>
                    <script src="/js/script.js"></script>